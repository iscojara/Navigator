<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="80dp"
        android:text="Registrar Usuario"
        android:textAlignment="center"
        android:backgroundTint="@color/link"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/txtECorreo"
        tools:layout_editor_absoluteX="49dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:text="Registro de Usuario"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtEnombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape_rectangle"
        android:ems="10"
        android:hint="Ingrese su Nombre Usuario"
        android:inputType="textPersonName"
        android:paddingVertical="10dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        tools:layout_editor_absoluteX="49dp" />

    <EditText
        android:id="@+id/txtEaP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_rectangle"
        android:ems="10"
        android:hint="Ingrese su apellido Paterno"
        android:inputType="textPersonName"
        android:paddingVertical="10dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/txtEnombre"
        tools:layout_editor_absoluteX="50dp" />

    <EditText
        android:id="@+id/txtEaM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_rectangle"
        android:ems="10"
        android:hint="Ingrese su apellido Materno"
        android:inputType="textPersonName"
        android:paddingVertical="10dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/txtEaP"
        tools:layout_editor_absoluteX="50dp" />

    <EditText
        android:id="@+id/txtECorreo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_rectangle"
        android:ems="10"
        android:hint="Ingrese su Correo"
        android:inputType="textEmailAddress"
        android:paddingVertical="10dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/txtEaM"
        tools:layout_editor_absoluteX="49dp" />

    <EditText
        android:id="@+id/txtEPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_rectangle"
        android:ems="10"
        android:hint="Ingrese su Password"
        android:inputType="textPersonName"
        android:paddingVertical="10dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/txtECorreo"
        tools:layout_editor_absoluteX="50dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:srcCompat="@drawable/store" />


</androidx.constraintlayout.widget.ConstraintLayout>