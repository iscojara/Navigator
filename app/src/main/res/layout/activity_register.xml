<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <Button
        android:id="@+id/RegisterUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/link"
        android:text="Registrar Usuario"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/txtPasswordR"
        tools:layout_editor_absoluteX="50dp" />

    <TextView
        android:id="@+id/lblRegisterUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Registro de Usuario"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtNombreURegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/shape_rectangle"
        android:ems="10"
        android:hint="Ingrese su Nombre Usuario"
        android:inputType="textPersonName"
        android:paddingVertical="10dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/imgGoogleMapsPuntoR"
        tools:layout_editor_absoluteX="50dp" />

    <EditText
        android:id="@+id/txtApellidoPR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_rectangle"
        android:ems="10"
        android:hint="Ingrese su apellido Paterno"
        android:inputType="textPersonName"
        android:paddingVertical="10dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/txtNombreURegister"
        tools:layout_editor_absoluteX="49dp" />

    <EditText
        android:id="@+id/txtApellidoMR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_rectangle"
        android:ems="10"
        android:hint="Ingrese su apellido Materno"
        android:inputType="textPersonName"
        android:paddingVertical="10dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/txtApellidoPR"
        tools:layout_editor_absoluteX="50dp" />

    <EditText
        android:id="@+id/txtCorreoR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_rectangle"
        android:ems="10"
        android:hint="Ingrese su Correo"
        android:inputType="textEmailAddress"
        android:paddingVertical="10dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/txtApellidoMR"
        tools:layout_editor_absoluteX="49dp" />

    <EditText
        android:id="@+id/txtPasswordR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/shape_rectangle"
        android:ems="10"
        android:hint="Ingrese su Password"
        android:inputType="textPersonName"
        android:paddingVertical="10dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/txtCorreoR"
        tools:layout_editor_absoluteX="50dp" />

    <ImageView
        android:id="@+id/imgGoogleMapsPuntoR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblRegisterUsuario"
        app:srcCompat="@drawable/store" />


</androidx.constraintlayout.widget.ConstraintLayout>